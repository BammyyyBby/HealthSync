generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String     @id @default(uuid()) //PK
  email              String     @unique
  password           String
  role               UserRole
  // role     UserRole @default(ADMIN)  // default role is PATIENT
  needPasswordChange Boolean
  status             UserStatus
  createdAt          DateTime
  updatedAt          DateTime
  admin              Admin?

  @@map("users")
}

model Admin {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique //Foreign Key of users table
  profilePhoto  String
  contactNumber String
  isDeleted     Boolean
  createdAt     DateTime
  updatedAt     DateTime

  user User @relation(fields: [email], references: [email])

  @@map("admins")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  DOCTOR
  PATIENT
}

enum UserStatus {
  ACTIVE
  BLOCKED
}
